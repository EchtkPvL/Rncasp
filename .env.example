# =============================================================================
# Rncasp Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values for your environment.
# Host/port settings for services are handled by docker-compose and do not
# need to be specified here.

# Application
APP_ENV=production             # development | production
APP_NAME=Rncasp
APP_BASE_URL=https://rncasp.example.com
APP_REGISTRATION_ENABLED=true
APP_DEFAULT_LANGUAGE=en
LOG_LEVEL=INFO                 # DEBUG | INFO | WARN | ERROR

# PostgreSQL credentials
DB_USER=rncasp
DB_PASSWORD=CHANGE_ME
DB_NAME=rncasp
DB_SSLMODE=disable

# Redis
REDIS_PASSWORD=

# Authentication
AUTH_SESSION_TTL=24h
AUTH_COOKIE_NAME=rncasp_session
AUTH_COOKIE_SECURE=true        # Set to false for local dev without HTTPS
AUTH_COOKIE_DOMAIN=
AUTH_BCRYPT_COST=12

# CORS
CORS_ALLOWED_ORIGINS=https://rncasp.example.com

# HTTP listen address (ip:port bound on the host)
# Examples: 0.0.0.0:80, 127.0.0.1:8080, 192.168.1.10:3000
HTTP_LISTEN=0.0.0.0:80

# =============================================================================
# Rncasp Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values for your environment.

# Application
APP_ENV=development          # development | production
APP_NAME=Rncasp
APP_BASE_URL=http://localhost:8080
APP_REGISTRATION_ENABLED=true
APP_DEFAULT_LANGUAGE=en

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s

# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_USER=rncasp
DB_PASSWORD=rncasp_dev_password
DB_NAME=rncasp
DB_SSLMODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
AUTH_SESSION_TTL=24h
AUTH_COOKIE_NAME=rncasp_session
AUTH_COOKIE_SECURE=false      # Set to true in production with HTTPS
AUTH_COOKIE_DOMAIN=
AUTH_BCRYPT_COST=12

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# Web (Docker port mapping)
WEB_PORT=80

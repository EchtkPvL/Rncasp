# =============================================================================
# Rncasp Standalone Deployment Configuration
# =============================================================================
# Copy this file to .env and adjust values for your environment.

# Application
APP_ENV=production
APP_NAME=Rncasp
APP_BASE_URL=https://shifts.example.com
APP_REGISTRATION_ENABLED=true
APP_DEFAULT_LANGUAGE=en
LOG_LEVEL=INFO                 # DEBUG | INFO | WARN | ERROR

# Database (change DB_PASSWORD!)
DB_USER=rncasp
DB_PASSWORD=CHANGE_ME
DB_NAME=rncasp

# Authentication
AUTH_SESSION_TTL=24h
AUTH_COOKIE_SECURE=true
AUTH_COOKIE_DOMAIN=

# CORS (must match APP_BASE_URL)
CORS_ALLOWED_ORIGINS=https://shifts.example.com

# HTTP (host:port to expose)
HTTP_LISTEN=0.0.0.0:80
